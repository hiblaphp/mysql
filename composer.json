{
    "name": "hiblaphp/mysql",
    "description": "Asychonous MySQL Client base on php-mysqli extension",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hibla\\MySQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "hiblaphp/event-loop": "dev-main",
        "hiblaphp/promise": "dev-main",
        "hiblaphp/async": "dev-main",
        "ext-mysqli": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "hiblaphp/task": "dev-main"
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "format": "./vendor/bin/pint",
        "format-test": "./vendor/bin/pint --test",
        "analyze": "./vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
